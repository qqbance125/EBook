<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rd_article_list_container"
    style="@style/fillall" >

    <RelativeLayout
        android:id="@+id/rd_article_list_title_container"
        android:layout_width="fill_parent"
        android:layout_height="52dip"
        android:layout_marginBottom="10dip"
        android:background="@color/rd_article_line_1" >

        <TextView
            android:id="@+id/rd_list_channel_name"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            
            android:paddingLeft="20dip"
            android:paddingRight="10dip"
            android:textColor="@color/rd_black"
            android:textSize="22sp"
            android:textStyle="bold" /><!-- android:background="@drawable/rd_article_common_title_bar_bg" -->
        
        <View android:id="@+id/rd_title_bottom_line" 
            android:layout_width="fill_parent"
            android:layout_height="4dip"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rd_list_channel_name"
            android:background="@drawable/rd_title_bottom_cover_list"/>
    </RelativeLayout>

    <com.qihoo360.reader.ui.articles.ArticleListView
        android:id="@+id/rd_article_lister"
        style="@style/fillx"
        android:layout_below="@+id/rd_article_list_title_container"
        android:animationCache="true"
        android:cacheColorHint="@null"
        android:listSelector="@android:color/transparent"
        android:divider="@null"
        android:fadingEdge="none" />

    <TextView
        android:id="@+id/rd_article_list_loaded_tips"
        style="@style/fillx"
        android:layout_below="@+id/rd_article_list_title_container" 
        android:background="@drawable/rd_article_list_tips_view_bg"
        android:gravity="center"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:textColor="@color/rd_white"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/rd_article_list_empty"
        style="@style/fillall"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/rd_empty_tips"
            style="@style/wrap"
            android:layout_margin="5dip"
            android:contentDescription="@drawable/rd_article_loading_exception"
            android:src="@drawable/rd_article_loading_exception"
            android:visibility="gone" />

        <Button
            android:id="@+id/rd_empty_refresh"
            style="@style/wrap"
            android:background="@drawable/rd_article_loading_error_refresh_drawable"
            android:visibility="gone" />
    </LinearLayout>

    <com.qihoo360.reader.ui.ReaderMenuContainer
        android:id="@+id/menu_layout"
        style="@style/fillall"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/top_subscribe_btn"
        android:layout_width="wrap_content"
        android:layout_height="58dip"
        android:layout_alignParentRight="true"
        android:contentDescription="@drawable/rd_article_title_subscribe_bg"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingBottom="10dip"
        android:src="@drawable/rd_article_title_subscribe_bg" />

    <ImageView
        android:id="@+id/top_subscribe_tips"
        style="@style/wrap"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38dip"
        android:contentDescription="@drawable/rd_artilce_subscribe_once_tips_bg"
        android:paddingRight="30dip"
        android:src="@drawable/rd_artilce_subscribe_once_tips_bg"
        android:visibility="gone" />

</RelativeLayout>